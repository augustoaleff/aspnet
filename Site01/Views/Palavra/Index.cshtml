@model List<Site01.Models.Palavra>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Palavra - Listagem</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <span>Total de Registros:  @Model.Count</span>
    <div class="container">
        <a href="/palavra/cadastrar" class="btn-primary">Cadastrar</a>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Palavra</th>
                <th scope="col">Nível</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var palavra in Model)
            {
            <tr>
                <th scope="row">@palavra.Id</th>
                <td>@palavra.Nome</td>
                <td>@palavra.Nivel</td>
                <td>
                    <a href="/Palavra/atualizar/@palavra.Id" class="btn">Atualizar</a>
                    <a href="/Palavra/excluir/@palavra.Id" class="btn">Excluir</a>
                </td>
            </tr>
            }
        </tbody>
    </table>


</body>
</html>
