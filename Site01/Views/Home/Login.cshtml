
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form method="post" action="/home/login">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" name="email"  class="form-control" id="email" placeholder="Digite o seu Email">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" name="senha" class="form-control" id="senha" placeholder="Digite o sua senha">
                @Html.ValidationMessage("senha")
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
        @ViewBag.Mensagem

    </div>

</body>
</html>
